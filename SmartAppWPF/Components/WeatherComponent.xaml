<UserControl x:Class="SmartAppWPF.Components.WeatherComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartAppWPF.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="{Binding CurrentWeatherCondition}" FontSize="23" FontFamily="{StaticResource FontAwesome-Regular}" Foreground="White"/>
        <TextBlock FontSize="20" Foreground="White">
            <Run Text="{Binding CurrentTemperature}"/>
            <Run Text="ºC"/>
        </TextBlock>
    </StackPanel>
</UserControl>
